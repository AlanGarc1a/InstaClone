<% layout('./layouts/boilerplate') -%>
<%- include('./partials/navbar'); %>

<div class="container mt-3 bg-white border">
    <div class="container">
        <div class="d-flex justify-content-center mb-4">
            <div class="p-1">
                <form>
                    <div class="input-group mt-4">
                        <div class="profile-img">
                            <img class="profile-img__img--edit" src="https://images.unsplash.com/photo-1612972412954-c7dd0e42ba4b?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1951&q=80">
                        </div>
                        <div>
                            <h2>Username</h2>
                            <label for="change-profile-photo" class="text-primary">
                                Change Profile Photo
                            </label>
                            <!-- <input id="change profile-photo" type="file"> -->
                        </div>
                    </div>
                    <div class="input-group mt-4">
                        <label class="fw-bold pe-4">Name</label>
                        <input  class="form-control rounded" type="text" placeholder="Name">
                    </div>
                    <div class="input-group mt-4">
                        <div class="pe-5">
                            <label class="d-inline-block fw-bold">Username</label>
                        </div>
                        <input  class="form-control rounded" type="text" placeholder="Username">
                    </div>
                    <div class="input-group mt-4">
                        <label class="fw-bold pe-4">Bio</label>
                        <textarea class="form-control rounded" ></textarea>
                    </div>
                    <button type="button" class="btn btn-primary m-5">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>