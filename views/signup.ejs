<% layout('./layouts/boilerplate') -%>
<div class="mx-auto">
    <div class="container border border-dark rounded w-25 p-5 position-absolute top-50 start-50 translate-middle">
        <div class="row mx-auto">
            <div class="col-lg-12">
                <p class="text-center fs-1 fw-bold">InstaClone</p>
                <div class="w-75 mx-auto">
                    <p class="text-center fs-5 fw-bold">Sign up to see photos and videos of your friends.</p>
                </div>
                <form action="#" method="#">
                    <div class="form-group">
                        <label for="email">&nbsp</label>
                        <input type="email" placeholder="Email" name="email" id="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="Full Name">&nbsp</label>
                        <input type="text" placeholder="Full Name" name="name" id="Full Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="username">&nbsp</label>
                        <input type="text" placeholder="Username" name="username" id="username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">&nbsp</label>
                        <input type="password" placeholder="Password" name="password" id="passsword"
                            class="form-control">
                    </div>
                    <div class="d-grid gap-2 col-12 mx-auto mt-3 mb-3">
                        <button type="button" class="btn btn-primary fw-bold">Sign Up</button>
                    </div>
                </form>
                <div class="w-75 mx-auto">
                    <p class="text-center fs-6 fw-bold">By signing up you agree to our Terms & Privacy Policy</p>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="text-center pt-3">Have an account already?<a href="/login" class="text-decoration-none"> Log in</a></p>
            </div>
        </div>
    </div>
</div>